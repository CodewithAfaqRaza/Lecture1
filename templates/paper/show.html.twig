{% extends 'base.html.twig' %}

{% block title %}Paper{% endblock %}

{% block body %}
    <h1>Paper</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ paper.id }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ paper.title }}</td>
            </tr>
            <tr>
                <th>Slug</th>
                <td>{{ paper.slug }}</td>
            </tr>
            <tr>
                <th>CreatedAt</th>
                <td>{{ paper.createdAt ? paper.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>UpdatedAt</th>
                <td>{{ paper.updatedAt ? paper.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_paper_index') }}">back to list</a>

    <a href="{{ path('app_paper_edit', {'id': paper.id}) }}">edit</a>

    {{ include('paper/_delete_form.html.twig') }}
{% endblock %}
