{% extends 'base.html.twig' %}
{% block body %}
  {% for message in app.flashes('success') %}
    {{ message }}
  {% endfor %}Page {{ teachers.CurrentPage }} out of {{ teachers.nbPages }} total is {{ teachers.nbResults }}
  {% for teacher in teachers %}
    <div class="text-2xl p-3 m-5 bg-gray-700">{{ teacher.id ~ ' ___--- ' ~ teacher.name }}</div>
    <hr />
  {% endfor %}
  {% if teachers.haveToPaginate %}
    {% if teachers.hasPreviousPage %}
      <a href="{{ path('show_all', { page: teachers.getPreviousPage }) }}">Previous</a>
    {% endif %}
    {% if teachers.hasNextPage %}
      <a href="{{ path('show_all', { page: teachers.getNextPage }) }}">Next</a>
    {% endif %}
  {% endif %}
{% endblock %}
